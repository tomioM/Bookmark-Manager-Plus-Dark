{
	"manifest_version": 2,
	"name": "Bookmark Manager Plus",
	"version": "0.9.9.7",
	"description": "Search bookmarks and do whatever you can imagine.",
	
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	
	"icons": {
		"128": "icons/icon-128.png"
	},
	
	"content_security_policy": "script-src 'self' https://code.jquery.com https://ajax.googleapis.com; object-src 'self'",
	
	"browser_action": {
		"default_icon": {
			"16": "icons/star-light-16.png",
			"24": "icons/star-light-24.png",
			"32": "icons/star-light-32.png"
		},
		"default_popup": "popup.html"
	},

	"background": {
		"page": "background.html",
		"persistent": false
	},

	"permissions": [
		"bookmarks",
		"tabs",
		"storage",
		"chrome://favicon/*"
	]
}